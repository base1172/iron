(executable
 (name    fe)
 (modules fe admin deploy import fe_config)
 (libraries
   async
   core
   core_unix.command_unix
   iron_client
   iron_common
   iron_hg
   iron_obligations
   iron_protocol
   iron_server)

 (preprocess (pps ppx_jane ppx_js_style -check-doc-comments)))

(executable
 (name    hydra)
 (modules hydra)
 (libraries async core core_unix.command_unix)
 (preprocess (pps ppx_jane ppx_js_style -check-doc-comments)))

(install
  (section bin)
  (files
    (fe.exe    as fe)
    (hydra.exe as hydra)))

(rule
  (deps fe.exe bashrc ../hg/hgrc)
  (mode promote)
  (action (
    with-stdout-to
    supported-internal-rpcs-for-review
    (bash
     "./fe.exe internal rpc-to-server supported-by-client -max-output-columns 500"))))

(rule
  (deps fe.exe bashrc ../hg/hgrc)
  (mode promote)
  (action (
    with-stdout-to
    supported-public-rpcs-for-review
    (bash
     "./fe.exe internal show-supported-iron-rpcs -max-output-columns 500"))))

(alias
  (name DEFAULT)
  (deps supported-internal-rpcs-for-review supported-public-rpcs-for-review))
